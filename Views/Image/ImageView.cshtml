
@using u20438428_HW03.Models
@model List<FileModel>

<head>
    
    <style type="text/css">
        .auto-style {
            color: #FFFFFF;
        }

        .t {
            text-align: center;
            vertical-align: middle;
        }

        #galleryItem {
            width: 200px;
        }
    </style>
    
    <script>
        $(document).ready(function ($) {
            $("#galleryItem").fancybox();
        });
    </script>
</head>
<div class="well-sm">
    <h2>Image Download / Delete</h2>
    <h5>
        This is for deleting or downloading images of any type from the Images folder
    </h5>
</div>

@*
    Will generate as item but can be renamed.
*@
<div style="height: 400px; overflow: auto;" >
    <div class="well-sm" >
        
        @foreach (FileModel file in Model)
        {
            


            <div>
                
                    <p><a id="galleryItem" href="~/images/@file.FileName"><img src="~/images/@file.FileName" id="galleryItem" /></a></p>
                
                
                <p>@file.FileName</p>
                <p>
                    <button>
                        @Html.ActionLink("Download", "DownloadFile",
                         new { fileName = file.FileName })
                    </button>

                    <button>
                        @Html.ActionLink("DELETE", "DeleteFile",
                       new { fileName = file.FileName },
                       new { onclick = "return confirm('Are you sure you wish to delete this?');" })
                    </button>
                </p>

            </div>



        }

    </div>
</div>

